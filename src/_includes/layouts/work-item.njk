---
layout: layouts/base.njk
templateEngineOverride: njk

---

    {% include "partials/site-head.njk" %}



<div class="w-full max-w-full mx-auto my-auto">
    <div class="h-vsm w-full bg-gray-300 dark:bg-gray-500"></div>

    <div class="max-w-full mx-auto h-auto py-4 md:py-4 px-4 lg:px-12 xl:px-12 2xl:px-2 bg-bggray-dark dark:bg-bgblue">

        <div class="max-w-8xl mx-auto h-auto py-4 px-2">

            <div class="pt-4 md:pt-4 lg:pt-12">

            <h1 class="text-fred dark:text-fgreen text-4xl lg:text-6xl font-OpenSauceSans font-bold tracking-tighter max-w-4xl leading-tight"> {{ displaytitle }} </h1>


            </div>



            <div class="pb-4 md:pb-4 lg:pb-12 text-gray-800 dark:text-gray-100 text-lg md:text-xl lg:text-2xl font-semibold pt-4 md:pt-4 lg:pt-8 max-w-4xl tracking-tight font-OpenSauceSans">
            
            {% if description %}
                <p> {{ description }} </p>
                
            {% endif %}
                
            </div>

        </div>


    </div>


        <div class="max-w-8xl mx-auto h-auto py-4 px-4 md:px-2">

   
        

            {% if section1 %}

                    {% if section1.heading %}
                        {% set featureheading  %}{{ section1.heading }}{% endset %}
                            {% include "partials/case-study-partials/feature-heading.njk" %}   
                    {% endif %}
        

                    {% if section1.subheading1 %}
                        {% set featuresubheading  %}{{ section1.subheading1 }}{% endset %}
                            {% include "partials/case-study-partials/feature-subheading.njk" %}   
                    {% endif %}

                    <div class="grid grid-cols-18 gap-0 md:gap-10 pt-4">

                    
                        <div class="prose max-w-none dark:prose-dark col-span-18 md:col-span-9 lg:col-span-6">
                            <div> {% renderFile "./src/mpl-components-info/fantasy-pro/introduction.md" %}  </div>
                        </div>

                        <div class="flex-shrink-0 mt-5 col-span-18 md:col-span-9 lg:col-span-12 ">
                            <img
                            src="{{ hero.image }}"
                            alt="{{ item.data.hero.imageAlt }}"
                            loading="lazy"
                            class="w-full rounded-sm overflow-hidden"
                            />
                            <p class="text-sm  pt-4 pl-2 text-gray-800 dark:text-gray-200 font-OpenSauceSans"> Basic concept of Fantasy involves a lot of contructs but is now a widely known game concept in India </p>
                        </div>

                    </div>
            
            {% endif %}

         </div>

         <div class="max-w-full mx-auto h-auto py-8 px-4 md:px-2 my-4 bg-bggray-dark dark:bg-bgblue ">

                <div class="max-w-8xl mx-auto h-auto py-4 px-4 md:px-2 grid grid-cols-18 gap-0 md:gap-10">

                <img
                src="/img/B&S-Screen.png"
                alt="{{ item.data.hero.imageAlt }}"
                loading="lazy"
                class="w-full rounded-xl shadow-xl overflow-hidden col-span-18 md:col-span-9 lg:col-span-6"
                />

                <img
                src="/img/B&S-Screen.png"
                alt="{{ item.data.hero.imageAlt }}"
                loading="lazy"
                class="w-full rounded-xl shadow-xl overflow-hidden col-span-18 md:col-span-9 lg:col-span-6"
                />

                <img
                src="/img/B&S-Screen.png"
                alt="{{ item.data.hero.imageAlt }}"
                loading="lazy"
                class="w-full rounded-xl shadow-xl overflow-hidden col-span-18 md:col-span-9 lg:col-span-6"
                />

                <iframe src="https://player.vimeo.com/video/682457016?h=5e57bede71" width="640" height="364" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe>

            </div>

        </div>

</div>


