---
layout: layouts/base.njk
---


    {% include "partials/site-head.njk" %}


    
<div class="w-full max-w-full mx-auto my-auto">
    <div class="h-vsm w-full bg-gray-300 dark:bg-gray-500">
    </div>

      <div class="max-w-full mx-auto h-auto py-4 md:py-4 px-4 lg:px-12 xl:px-12 2xl:px-2 bg-bggray-dark dark:bg-bgblue">

      <div class="max-w-8xl mx-auto h-auto py-4 px-2">





            <div class="flex flex-col lg:flex-row max-w-full ">

            <div class="grid grid-cols-12">


            {% if coverimagetrue %}



              <div class="col-span-12 md:col-span-5 xl:col-span-4 pr-0 md:pr-2 lg:pr-8">


                <div class="pt-4 md:pt-4 lg:pt-12">

                  <h1 class="text-fred dark:text-fgreen text-4xl lg:text-6xl font-OpenSauceSans font-bold tracking-tighter max-w-4xl leading-tight"> {{ title }} </h1>


                </div>



                <div class="text-gray-800 dark:text-gray-100 text-lg md:text-xl lg:text-2xl font-semibold pt-4 md:pt-4 lg:pt-8 max-w-4xl tracking-tight font-OpenSauceSans">

                {% if subtext %}
                  <p> {{ subtext }} </p>
                {% endif %}
                  
                </div>



                <div class="flex flex-col pt-8 md:pt-16 pb-4 md:pb-0 md:pr-20">

                <div class=" h-[2px] bg-gray-200 dark:bg-gray-800">
                </div>




                <div class="flex flex-row space-x-4">

                  <div class="w-[100px]"> <p class="w-[200px] text-[12px] uppercase tracking-wide md:text-sm text-gray-700 dark:text-gray-200 font-bold font-inter py-4" > Published On </p></div>
                  <div class="min-h-full w-[1px] bg-gray-200 dark:bg-gray-800"></div>
                  <p class="text-sm uppercase tracking-wide md:text-base text-gray-900 dark:text-gray-100 font-bold font-inter py-4" > {{ page.date | readableDate }} </p>
                
                </div>


                <div class="min-w-full h-[1px] bg-gray-200 dark:bg-gray-800"></div>


                <div class="flex flex-row space-x-4">

                  <div class="w-[100px]"><p class=" text-[12px] uppercase tracking-wide md:text-sm text-gray-700 dark:text-gray-200 font-bold font-inter py-4" > Location </p></div>
                  <div class="min-h-full w-[1px] bg-gray-200 dark:bg-gray-800"></div>
                  <p class="text-sm uppercase tracking-wide md:text-base text-gray-900 dark:text-gray-100 font-bold font-inter py-4" > {{ location }} </p>
                
                </div>

                <div class=" h-[2px] bg-gray-200 dark:bg-gray-800">
                </div>



                </div>

               

              </div>


              <div class="col-span-12 md:col-span-7 xl:col-span-8 pt-4 md:pt-4 lg:pt-12">

                <img
                    src="{{ coverimage }}"
                    alt="{{ lkdklc}}"
                    loading="lazy"
                    class="w-full -mb-20  rounded-sm shadow-lg"
                  />

              </div>

              
            

            {% else %}

            
            <div class="col-span-12 md:col-span-9 xl:col-span-8 pr-0 md:py-8 md:pr-2 lg:pr-8">


              <div class="pt-4 md:pt-4 lg:pt-12">

                <h1 class="text-fred dark:text-fgreen text-4xl lg:text-6xl font-OpenSauceSans font-bold tracking-tighter max-w-4xl leading-tight"> {{ title }} </h1>


              </div>



              <div class="text-gray-800 dark:text-gray-100 text-lg md:text-xl lg:text-2xl font-semibold pt-4 md:pt-4 lg:pt-8 max-w-4xl tracking-tight font-OpenSauceSans">

              {% if subtext %}
                <p> {{ subtext }} </p>
              {% endif %}
                
              </div>

               


                </div>


               

            </div>


            



            {% endif %}

    

</div>
</div>
</div>
</div>







<div class="max-w-8xl mx-auto h-auto py-4 md:py-4 px-4 lg:px-12 xl:px-12 2xl:px-2 ">

    <div class="grid grid-cols-1 lg:grid-cols-12 pt-8">

      {% if tocenabled %}

      <div class="lg:col-span-8 xl:col-span-9">

        <article class="prose max-w-none dark:prose-dark pr-0 md:pr-8 lg:pr-12">
          {{ content | safe }}
        </article>

      </div>
        {% else %}



      <div class="lg:col-span-12 xl:col-span-12">



        <article class="prose max-w-none dark:prose-dark pr-0 md:pr-8 lg:pr-12">
          {{ content | safe }}
        </article>

      </div>

      {% endif %}




        {% if tocenabled %}
        <div class="sticky h-screen w-full top-0 lg:col-span-4 xl:col-span-3">
            
            <aside class="pt-8">
            <div class="uppercase text-base font-bold font-inter text-fred dark:text-fgreen tracking-wider pb-4">
            <p> Table of Contents â†“ </p>
            </div>
            {{ content | toc | safe }}
            </aside>
        </div>
        {% endif %}



    </div>

  </div>

</div>

</div>

